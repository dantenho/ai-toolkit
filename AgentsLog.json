{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agents Log Schema",
  "description": "Schema for tracking agent interactions, file changes, and system modifications with timestamps",
  "type": "object",
  "properties": {
    "entries": {
      "type": "array",
      "description": "Array of log entries, each representing a timestamped change or interaction",
      "items": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of when the change occurred"
          },
          "agent": {
            "type": "string",
            "description": "Identifier of the agent or system that made the change"
          },
          "action": {
            "type": "string",
            "enum": ["create", "modify", "delete", "read", "integrate", "test", "deploy"],
            "description": "Type of action performed"
          },
          "files": {
            "type": "array",
            "description": "List of files affected by this change",
            "items": {
              "type": "object",
              "properties": {
                "path": {
                  "type": "string",
                  "description": "Relative path to the file from repository root"
                },
                "operation": {
                  "type": "string",
                  "enum": ["created", "modified", "deleted", "read"],
                  "description": "Operation performed on the file"
                },
                "lines_changed": {
                  "type": "integer",
                  "description": "Number of lines added, modified, or removed"
                }
              },
              "required": ["path", "operation"]
            }
          },
          "interactions": {
            "type": "array",
            "description": "List of system components, APIs, or services interacted with",
            "items": {
              "type": "object",
              "properties": {
                "component": {
                  "type": "string",
                  "description": "Name of the component, service, or integration point"
                },
                "type": {
                  "type": "string",
                  "enum": ["api", "database", "service", "library", "workflow", "config"],
                  "description": "Type of interaction"
                },
                "status": {
                  "type": "string",
                  "enum": ["success", "failure", "pending", "skipped"],
                  "description": "Status of the interaction"
                }
              },
              "required": ["component", "type"]
            }
          },
          "dependencies": {
            "type": "array",
            "description": "List of dependencies added, updated, or removed",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the dependency"
                },
                "version": {
                  "type": "string",
                  "description": "Version of the dependency"
                },
                "operation": {
                  "type": "string",
                  "enum": ["added", "updated", "removed"],
                  "description": "Operation performed on the dependency"
                }
              },
              "required": ["name", "operation"]
            }
          },
          "summary": {
            "type": "string",
            "description": "Human-readable summary of the changes made"
          },
          "roadmap_impact": {
            "type": "array",
            "description": "Roadmap items or features affected by this change",
            "items": {
              "type": "string"
            }
          },
          "ci_cd_status": {
            "type": "object",
            "description": "CI/CD pipeline status and configuration changes",
            "properties": {
              "workflow_modified": {
                "type": "boolean",
                "description": "Whether CI/CD workflow files were modified"
              },
              "tests_added": {
                "type": "boolean",
                "description": "Whether new tests were added"
              },
              "lint_status": {
                "type": "string",
                "enum": ["passed", "failed", "skipped"],
                "description": "Status of linting checks"
              }
            }
          }
        },
        "required": ["timestamp", "action", "summary"]
      }
    }
  },
  "required": ["entries"]
}

